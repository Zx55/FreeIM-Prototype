{
    "compilerOptions": {
        "target": "es6",
        "outDir": "./dist/",
        "sourceMap": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "allowJs": false,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "downlevelIteration": true,
        "resolveJsonModule": true,
        "typeRoots": [ "../node_modules/@types" ],
        "types": ["node"]
    },
    "include": [
        "../src/**/*.ts",
        "../src/**/*.tsx",
        "../src/**/*.d.ts"
    ],
    "exclude": [
        "../coverage",
        "../dist",
        "../node_modules"
    ]
}